<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>Baby Foot Manager</title>
  </head>
  <body>
    <ul id="users"></ul>
    <div class="container-chat">
      <fieldset class="box-chat">
        <legend>Tchat</legend>
        <div class="account-img"><a href="#modal-username" id="usernameShow" title="Anonyme"><span class="material-icons-outlined icon-btn">person_outline</span></a></div>
        <div class="index-box-form">
          <input name="search" id="search" type="text" class="remove-style" placeholder="Nickname...">
          <button name="submit" id="" type="submit"><span class="material-icons-outlined icon-btn">search</span></button>
        </div>
        <div class="discussion" id="chat" style="height: 600px;">
          <ul class="list-group" id="message-list"></ul>
          <div class="info"></div>
        </div>
        <div class="index-box-form"><!--<form action="">-->
          <input name="message" id="message" type="text"class="remove-style" autocomplete="off" placeholder="Message...">
          <button id="send-message" name="submit" class="" type="submit"><span class="material-icons-outlined icon-btn">send</span></button>
        </div>
      </fieldset>
    </div>
    
    <!-- modal for change username (need to disable chat if empty) -->
    <div id="modal-username" class="modal">
      <div class="modal-content">
        <p>Modifier votre pseudo</p>
          <input type="text" name="username" id="username">
          <button id="usernameBtn" type="submit" class="btn-save">Sauvegarder</button>
        <a href="#" class="modal-close"><span class="material-icons-outlined" style="color: red;">close</span></a>
      </div>
    </div>
    
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="/public/js/chat.js"></script>
  </body>
</html>