<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>Baby Foot Manager</title>
  </head>
  <body>
    <div class="container-party">
      <div class="add-party">
        <form action="/create" method="POST">
          <input placeholder="Nouvelle partie ..." type="text" name="party" id="party"><%=data.party%></input>
          <button class="btn-add-party" type="submit">Ajouter</button>
        </form>
      </div>
      <div class="list-party">
        <fieldset class="box-party">
          <legend>Les parties</legend>
          <!-- show the number of games completed -->
          <legend class="legend-right">0</legend>
            <table>
              <% for(var i = 0; i < data.length; i++){ %>
                <tr>
                    <td>
                      <!-- if checked/unchecked => post query -->
                      <input type="checkbox" name="checkbox" id="checkbox">
                      <label for="checkbox" type="text"><%= data[i].party%></label>
                    </td>
                    <td>
                      <form method="POST" class="icon-form">
                      <button class="option-party" formaction="/delete/<%= data[i].id %>" type="submit">
                        <span class="material-icons-outlined" style="color: red;">close</span>
                      </button>
                    </form>
                    </td>
                </tr>
              <% } %>
          </table>
        </fieldset>
      </div>
    </div>
    <script type="text/javascript">
      checkbox = document.getElementById('checkbox')
      checkbox.addEventListener('change', (event) => {
        if (event.currentTarget.checked) {
          console.log('checked')
        } else {
          console.log('unchecked')
        }
      })
    </script>
  </body>
</html>