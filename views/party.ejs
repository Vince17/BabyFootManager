<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>Baby Foot Manager</title>
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons+Outlined" rel="stylesheet">
  </head>
  <body>
    <div class="container-party">
      <div class="add-party">
        <form action="/create" method="POST">
          <input placeholder="Nouvelle partie ..." type="text" name="party" id="party"><%=data.party%></input>
          <button class="btn-add-party" type="submit">Ajouter</button>
        </form>
      </div>
      <div class="list-party">
        <fieldset class="box-party">
          <legend>Les parties</legend>
              <% for(var i = 0; i < data.length; i++){ %>
                <div value="<%=data[i].id%>" id="draggable">
                  <form method="POST" class="icon-form">
                    <input type="checkbox" name="checkbox" class="done" formaction="/done/<%= data[i].id %>"></span>
                    <label for="done" class="text"><%= data[i].party%></label>
                    <button class="option-party" formaction="/edit/<%= data[i].id %>" type="submit">
                      <span class="material-icons-outlined" style="color: #3675fd;">edit</span>
                    </button>
                    <button class="option-party" formaction="/delete/<%= data[i].id %>" type="submit">
                      <span class="material-icons-outlined" style="color: red;">close</span>
                    </button>
                  </form>
                </div>
              <% } %>
        </fieldset>
      </div>
    </div>
    <!--
    <script>
      event.preventDefault()
    </script>
    -->
  </body>
</html>